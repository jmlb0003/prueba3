<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:key="@string/filter_settings_key"
    tools:context=".MainActivity" >

    <PreferenceCategory
         android:title="@string/title_filter_prefs" >
         
	    <CheckBoxPreference
			android:key="@string/ft_open_key"
			android:title="@string/ft_open_label"
		   	android:summary="@string/ft_open_sum"
		   	android:defaultValue="false" />
    </PreferenceCategory>
    
    <PreferenceCategory
         android:title="@string/title_source_filter" >
         
	    <CheckBoxPreference
			android:key="@string/ft_wiki_key"
			android:title="@string/ft_wiki_label"
		   	android:summary="@string/ft_wiki_sum"
		   	android:defaultValue="true" />
	    <CheckBoxPreference
			android:key="@string/ft_local_key"
			android:title="@string/ft_local_label"
		   	android:summary="@string/ft_local_sum"
		   	android:defaultValue="true" />

    </PreferenceCategory>
</PreferenceScreen>
